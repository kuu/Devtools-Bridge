{
  "name": "DevtoolsBridge",
  "version": "0.1",
  "description": "Template for building Chrome devtools panel window that communicates with currently loaded web pages.",
  "devtools_page": "lib/devtools.html",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "lib/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/content.js"],
    "run_at": "document_end"
  }]
}
